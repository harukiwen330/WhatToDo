@model IEnumerable<WhatToDo.Models.Todo>

@{
    ViewData["Title"] = "Index";
}

<h1>Things Todo</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.TodoList)*@
                Todo List
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Status)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TodoList)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">
                    <i class="bi bi-pen"></i>
                </a>

                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">
                    <i class="bi bi-book"></i>
                </a>

                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                    <i class="bi bi-trash3-fill"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
